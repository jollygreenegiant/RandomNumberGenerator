<resources>

    <!-- Base application theme. -->
    <style name="DefaultTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/defaultColorPrimary</item>
        <item name="colorPrimaryDark">@color/defaultColorPrimaryDark</item>
        <item name="colorAccent">@color/defaultColorAccent</item>
        <item name="android:textColorPrimary">@color/defaultTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/defaultTextColorSecondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="DefaultTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferenceThemeOverlay" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:background">?android:colorPrimary</item>
    </style>

    <style name="RedGreen" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/christmasColorPrimary</item>
        <item name="colorPrimaryDark">@color/christmasColorPrimaryDark</item>
        <item name="colorAccent">@color/christmasColorAccent</item>
        <item name="android:textColorPrimary">@color/christmasTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/christmasTextColorSecondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="OrangeBlue" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/obColorPrimary</item>
        <item name="colorPrimaryDark">@color/obColorPrimaryDark</item>
        <item name="colorAccent">@color/obColorAccent</item>
        <item name="android:textColorPrimary">@color/obTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/obTextColorSecondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="RedBlue" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/obColorPrimary</item>
        <item name="colorPrimaryDark">@color/obColorPrimaryDark</item>
        <item name="colorAccent">@color/obColorAccent</item>
        <item name="android:textColorPrimary">@color/obTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/obTextColorSecondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Dark" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:textColorPrimary">@color/darkTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/darkTextColorSecondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

</resources>
